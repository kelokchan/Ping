<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.teamveryniceah.ping.PoliceFragment"
    android:longClickable="true">

    <com.skyfishjy.library.RippleBackground
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ambContent"
        android:layout_gravity="center"
        app:rb_color="@color/green"
        app:rb_radius="32dp"
        app:rb_rippleAmount="4"
        app:rb_duration="2500"
        app:rb_scale="10">

    </com.skyfishjy.library.RippleBackground>

    <at.markushi.ui.CircleButton
        android:id="@+id/ambButton"
        android:layout_width="match_parent"
        android:layout_height="250dip"
        android:src="@drawable/ambulance2"
        app:cb_color="@color/green"
        app:cb_pressedRingWidth="20dip"
        android:layout_gravity="center"
        android:onClick="ambButtonClick"
        android:longClickable="true" />

</FrameLayout>
